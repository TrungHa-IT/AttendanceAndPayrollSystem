@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>HR Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background-color: #f8f9fa;">
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h2>Welcome to HR Management Dashboard</h2>
            <p class="text-muted">Manage departments, employees, and leave types</p>
        </div>

        <div class="row text-center">
            <!-- Department Management -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">Department Management</h5>
                        <p class="card-text">Create, edit or delete departments.</p>
                        <a href="@Url.Action("Department", "Department")" class="btn btn-primary">Manage Departments</a>
                    </div>
                </div>
            </div>

            <!-- Employee Management -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">Employee Management</h5>
                        <p class="card-text">View and manage employee information.</p>
                        <a href="@Url.Action("Employee", "Employee")" class="btn btn-success">Manage Employees</a>
                    </div>
                </div>
            </div>

            <!-- Leave Types Management -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">Leave Types</h5>
                        <p class="card-text">Define and update leave categories.</p>
                        <a href="@Url.Action("Index", "LeaveTypes", new { area = "HR" })" class="btn btn-warning text-white">Manage Leave Types</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger">Logout</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
