@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>HR Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #f0f8ff, #e6f7ff);
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .dashboard-container {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 60px 20px;
        }

        .dashboard-card {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 25px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px;
        }

        .dashboard-title {
            font-size: 2.5rem;
            margin-bottom: 10px;
            color: #2c3e50;
            font-weight: bold;
            text-align: center;
        }

        .dashboard-subtitle {
            font-size: 1.2rem;
            color: #6c757d;
            text-align: center;
            margin-bottom: 30px;
        }

        .dashboard-btn {
            width: 100%;
            padding: 25px 15px;
            font-size: 1.25rem;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

            .dashboard-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

        .logout-link {
            margin-top: 30px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <div class="dashboard-card">
            <h2 class="dashboard-title">Welcome to HR Dashboard</h2>
            <p class="dashboard-subtitle">Manage departments, employees, and leave types</p>

            <div class="row mb-3">
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Department", "Department")" class="btn btn-primary dashboard-btn">
                        🏢 Manage Departments
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Employee", "Employee")" class="btn btn-success dashboard-btn">
                        👤 Manage Employees
                    </a>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("EmployeeStatistic", "EmployeeStatistic")" class="btn btn-primary dashboard-btn">
                        🏢 Statistic Employee
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("EmployeeStatistic", "EmployeeStatistic")" class="btn btn-primary dashboard-btn">
                        🏢 Statistic acd
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("EmployeeStatistic", "EmployeeStatistic")" class="btn btn-primary dashboard-btn">
                        🏢 Statistic aaa
                    </a>
                </div>
                
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("LeaveType", "LeaveType")" class="btn btn-warning text-white dashboard-btn">
                        🌴 Manage Leave Types
                    </a>
                </div>
                <div class="col-md-6 mb-3">
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-danger dashboard-btn">
                        🚪 Logout
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
