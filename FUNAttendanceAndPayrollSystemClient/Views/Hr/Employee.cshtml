@model IEnumerable<DataTransferObject.EmployeeDTO.EmployeeDTO>

@{
    ViewBag.Title = "Employee Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Employee Management</h2>
        <a href="https://localhost:7145/Auth/Register" class="btn btn-primary">Add Employee</a>
    </div>

   



    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Photo</th>
                <th>Name</th>
                <th>DOB</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Status</th>
                <th>Department</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployId</td>
                <td>
                @if (!string.IsNullOrEmpty(emp.Image))
                {
                    <img src="@emp.Image" alt="Photo" style="width: 50px; height: 50px; object-fit: cover;" class="rounded-circle" />
                }
                else
                {
                    <span>No Image</span>
                }
            </td>
                <td>@emp.EmployeeName</td>
                <td>@emp.Dob?.ToString("dd/MM/yyyy")</td>
                <td>@emp.Email</td>
                <td>@emp.PhoneNumber</td>
                <td>
                    @if (emp.Gender == "1")
                    {
                        <span class="badge bg-success">Male</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Female</span>
                    }
                </td>
                <td>@emp.Address</td>
                <td>@emp.Position</td>
                <td>@emp.Salary?.ToString("dd/MM/yyyy")</td>
                 <td>
                    @if (emp.Status == 1)
                    {
                        <span class="badge bg-success">Inactive</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Active</span>
                    }
                 </td>
                <td>@emp.DepartmentName</td>
                <td>@emp.CreateAt.ToString("dd/MM/yyyy")</td>
                @* <td>
                    <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editModal-@emp.EmployId">Edit</button>
                    <a asp-action="Delete" asp-route-id="@emp.EmployId" onclick="return confirm('Are you sure you want to delete this employee?')" class="btn btn-sm btn-danger">Delete</a>
                </td> *@
            </tr>


            <!-- Edit Modal -->
            <div class="modal fade" id="editModal-@emp.EmployId" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <form asp-action="Edit">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Employee</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body row g-3 px-3">
                                <input type="hidden" name="EmployId" value="@emp.EmployId" />
                                <div class="col-md-6 mb-3">
                                    <label>Current Photo</label><br />
                                    <img src="@emp.Image" alt="Employee Photo" style="max-width: 200px; height: auto;" class="img-thumbnail" />
                                </div>

                                <div class="col-md-6">
                                    <label>Name</label>
                                    <input type="text" name="EmployeeName" class="form-control" value="@emp.EmployeeName" />
                                </div>
                                <div class="col-md-6">
                                    <label>DOB</label>
                                    <input type="date" name="Dob" class="form-control" value="@emp.Dob?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-6">
                                    <label>Email</label>
                                    <input type="email" name="Email" class="form-control" value="@emp.Email" />
                                </div>
                                <div class="col-md-6">
                                    <label>Phone</label>
                                    <input type="text" name="PhoneNumber" class="form-control" value="@emp.PhoneNumber" />
                                </div>
                                <div class="col-md-6">
                                    <label>Status</label>
                                    <select name="Status" class="form-select">
                                        @if (emp.Status == 1)
                                        {
                                            <option value="1" selected>Active</option>
                                            <option value="0">Inactive</option>
                                        }
                                        else
                                        {
                                            <option value="1">Active</option>
                                            <option value="0" selected>Inactive</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label>Address</label>
                                    <input type="text" name="Address" class="form-control" value="@emp.Address" />
                                </div>
                                <div class="col-md-6">
                                    <label>Position</label>
                                    <input type="text" name="Position" class="form-control" value="@emp.Position" />
                                </div>
                                <div class="col-md-6">
                                    <label>Salary</label>
                                    <input type="number" name="Salary" class="form-control" value="@emp.Salary" />
                                </div>
                                <div class="col-md-6">
                                    <label>Status</label>
                                    <select name="Status" class="form-select">
                                        <option value="1" selected="@(emp.Status == 1)">Active</option>
                                        <option value="0" selected="@(emp.Status == 0)">Inactive</option>
                                    </select>
                                </div>

                                <div class="col-md-6">
                                    <label>Department ID</label>
                                    <input type="number" name="DepartmentId" class="form-control" value="@emp.DepartmentId" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-success">Update</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
        </tbody>
    </table>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
