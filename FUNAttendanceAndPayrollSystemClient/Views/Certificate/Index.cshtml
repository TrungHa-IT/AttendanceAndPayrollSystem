@using DataTransferObject.EmployeeDTOS
@model List<CertificateDTO>

@{
    ViewData["Title"] = "Certificates";
}

<div class="container mt-4">
    <h2 class="mb-4">Certificate List</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No certificates found.</div>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Issue Date</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                    <th>Approved By</th>
                    <th>Images</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    var cert = Model[i];
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@cert.CertificateName</td>
                        <td>@cert.IssueDate.ToString("yyyy-MM-dd")</td>
                        <td>@cert.ExpiryDate.ToString("yyyy-MM-dd")</td>
                        <td>@cert.Status</td>
                        <td>@cert.ApprovedBy.</td>
                        <td>
                            @if (cert.ImageUrls != null && cert.ImageUrls.Any())
                            {
                                foreach (var img in cert.ImageUrls)
                                {
                                    <img src="@img" alt="Certificate Image" width="80" height="60" class="me-1 mb-1" />
                                }
                            }
                            else
                            {
                                <span>No image</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
