@{
    ViewData["Title"] = "Manage Attendance";
    var employees = ViewBag.Employees as List<DataTransferObject.EmployeeDTO.EmployeeDTO>;
    var departments = ViewBag.departments;

    int selectedMonth = int.TryParse(ViewContext.HttpContext.Request.Query["month"], out var m) ? m : DateTime.Now.Month;
    int selectedYear = int.TryParse(ViewContext.HttpContext.Request.Query["year"], out var y) ? y : DateTime.Now.Year;
    string selectedDepartment = ViewContext.HttpContext.Request.Query["department"];

}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg w-100" style="max-width: 1000px;">
        <div class="card-body">
            <h2 class="text-center mb-4 text-primary">Employee List</h2>

            <form method="get" class="row row-cols-lg-auto g-3 align-items-end mb-4">
                <style>
                    .wide-select {
                        width: 250px;
                    }
                </style>

                <div class="col">
                    <label for="monthSelect" class="form-label">Month</label>
                    <select id="monthSelect" name="month" class="form-select wide-select">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@(i == selectedMonth ? "selected" : null)">
                                @i
                            </option>
                        }
                    </select>
                </div>

                <div class="col">
                    <label for="yearSelect" class="form-label">Year</label>
                    <select id="yearSelect" name="year" class="form-select wide-select">
                        @{
                            int currentYear = DateTime.Now.Year;
                            for (int ye = currentYear - 5; ye <= currentYear + 1; ye++)
                            {
                                <option value="@ye" selected="@(ye == selectedYear ? "selected" : null)">
                                    @ye
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="col">
                    <label for="departmentSelect" class="form-label">Department</label>
                    <select id="departmentSelect" name="department" class="form-select wide-select">
                        <option value="" selected="@(string.IsNullOrEmpty(selectedDepartment) ? "selected" : null)">All</option>
                        @if (departments != null)
                        {
                            foreach (var dept in departments)
                            {
                                <option value="@dept.DepartmentId" selected="@(dept.DepartmentId.ToString() == selectedDepartment ? "selected" : null)">
                                    @dept.DepartmentName
                                </option>
                            }
                        }
                    </select>
                </div>

                <div class="col">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </form>

            <!-- 🧾 Employee Table -->
            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>Position</th>
                        <th>Department</th>
                        <th>Total Hour</th>
                        <th>Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @if (employees != null && employees.Any())
                    {
                        foreach (var emp in employees)
                        {
                            <tr>
                                <td>@emp.EmployId</td>
                                <td>@emp.EmployeeName</td>
                                <td>@emp.Dob?.ToString("yyyy-MM-dd")</td>
                                <td>@emp.Email</td>
                                <td>@emp.PhoneNumber</td>
                                <td>@emp.Gender</td>
                                <td>@emp.Address</td>
                                <td>@emp.Position</td>
                                <td>@emp.DepartmentName</td>
                                <td>@emp.TotalTimeWorked</td>
                                <td>@emp.TotalSalary VND</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center text-danger">No employee data available</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="d-flex justify-content-center mt-4 gap-3" style="margin-bottom: 100px;">
                <a id="exportExcelBtn" class="btn btn-success">Xuất file Excel</a>
            </div>
        </div>
    </div>
</div>

<script>
    window.onload = () => {
        const exportBtn = document.getElementById("exportExcelBtn");

        exportBtn.addEventListener("click", function () {
            const month = document.getElementById("monthSelect").value;
            const year = document.getElementById("yearSelect").value;
            const department = document.getElementById("departmentSelect").value;

            const url = `/Staff/ExportTimeSheetToExcel?month=${month}&year=${year}&department=${department}`;
            window.location.href = url;
        });
    }
</script>
