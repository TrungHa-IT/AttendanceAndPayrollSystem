@{
    ViewData["Title"] = "Manage Attendance";
    var employees = ViewBag.Employees as List<DataTransferObject.EmployeeDTO.EmployeeDTO>;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg w-100" style="max-width: 1000px;">
        <div class="card-body">
            <h2 class="text-center mb-4 text-primary">Employee List</h2>

            <table class="table table-bordered table-hover">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>DOB</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>Position</th>
                        <th>Department</th>
                        <th>Total Hour</th>
                        <th>Salary</th>
                    </tr>
                </thead>
                <tbody>
                    @if (employees != null)
                    {
                        foreach (var emp in employees)
                        {
                            <tr>
                                <td>@emp.EmployId</td>
                                <td>@emp.EmployeeName</td>
                                <td>@emp.Dob?.ToString("yyyy-MM-dd")</td>
                                <td>@emp.Email</td>
                                <td>@emp.PhoneNumber</td>
                                <td>@emp.Gender</td>
                                <td>@emp.Address</td>
                                <td>@emp.Position</td>
                                <td>@emp.DepartmentName</td>
                                <td>@emp.TotalTimeWorked</td>
                                <td>
                                    @emp.TotalSalary VND
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="10" class="text-center text-danger">No employee data available</td></tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-center mt-4 gap-3">
                <a id="exportExcelBtn" class="btn btn-success">Xuất file Excel</a>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = () => {
        const row = document.querySelector("tbody tr");
        if (row && row.cells.length >= 1) {
            const employeeId = row.cells[0].textContent.trim();
            document.getElementById("exportExcelBtn").href = `/Staff/ExportTimeSheetToExcel?EmployId=${employeeId}`;
        }
    }
</script>
