@{
    ViewData["Title"] = "Manager Dashboard";
}

<style>
    .dashboard-container {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f0f8ff, #e6f7ff);
        padding: 40px 20px;
    }

    .dashboard-card {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 25px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 700px;
    }

    .dashboard-title {
        font-size: 2.5rem;
        margin-bottom: 30px;
        color: #2c3e50;
        font-weight: bold;
        text-align: center;
    }

    .dashboard-btn {
        width: 100%;
        padding: 30px 20px;
        font-size: 1.5rem;
        border-radius: 20px;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

    .dashboard-btn:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    .dashboard-row {
        margin-bottom: 20px;
    }

    }
</style>

<div class="dashboard-container">
    <div class="dashboard-card">
        <h2 class="dashboard-title">Manager Dashboard</h2>

        <div class="row dashboard-row">
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ManageOverTime", "ManageSchedule")" class="btn btn-success dashboard-btn">
                    🕒 OverTime Request
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ManageAttendance", "Attendance")" class="btn btn-primary dashboard-btn">
                    📋 View Attendance
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("Payroll", "Staff")" class="btn btn-warning text-white dashboard-btn">
                    💵 Trigger Payroll
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ManageLeave", "Staff")" class="btn btn-danger dashboard-btn">
                    🌴 Manage Leave
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="@Url.Action("ManageCertificate", "Staff")" class="btn btn-danger dashboard-btn">
                    🌴 Manage Certificate
                </a>
            </div>
        </div>
    </div>
</div>
